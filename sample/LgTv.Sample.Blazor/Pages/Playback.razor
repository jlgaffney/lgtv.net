@page "/playback"
@inject ILgTvClientController Controller

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h5">Playback</MudText>
    </MudCardHeader>

    <MudCardContent>
        <MudStack Row Spacing="1">
            <MudIconButton OnClick="Controller.Client.Playback.Play" Icon="@Icons.Material.Filled.PlayArrow" Size="Size.Large" />
            <MudIconButton OnClick="Controller.Client.Playback.Pause" Icon="@Icons.Material.Filled.Pause" Size="Size.Large" />
            <MudIconButton OnClick="Controller.Client.Playback.Stop" Icon="@Icons.Material.Filled.Stop" Size="Size.Large" />
        </MudStack>
    </MudCardContent>
    
    <MudCardActions>
        <MudStack Row Spacing="1">
            <MudIconButton OnClick="Controller.Client.Playback.Rewind" Icon="@Icons.Material.Filled.SkipPrevious" />
            <MudIconButton OnClick="Controller.Client.Playback.FastForward" Icon="@Icons.Material.Filled.SkipNext" />
        </MudStack>
    </MudCardActions>
</MudCard>