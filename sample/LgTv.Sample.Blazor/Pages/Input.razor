@page "/inputs/{Id}"
@inject ILgTvClientController Controller

@if (_input == null)
{
    <h3>Input</h3>

    <br />

    <p><em>Loading...</em></p>
}
else
{
    <img alt="@_input.Label Icon" style="background: #D6DBDB; border: 1px solid black;" src="@_input.Icon" />

    <h3 style="margin: 0.55rem 0">@_input.Label</h3>

    <p>@(_input.Connected ? "Connected" : "Not connected")</p>

    <button class="btn btn-primary" @onclick="() => Controller.Client.Inputs.SetInput(_input.Id)">Select</button>
}

@code {
    private LgTv.Clients.Inputs.Input _input;

    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _input = await Controller.Client.Inputs.GetInput(Id);
    }
}
