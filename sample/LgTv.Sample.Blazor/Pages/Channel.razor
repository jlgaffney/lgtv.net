@page "/channels/{Id}"
@inject ILgTvClientController Controller

@if (_item == null)
{
    <MudProgressLinear Indeterminate />
    return;
}

<MudCard>
    <MudCardHeader>
        <MudAvatar>@_item.Number</MudAvatar>
    </MudCardHeader>
    
    <MudCardContent>
        <MudText Typo="Typo.h4">@_item.Name</MudText>
    </MudCardContent>
    
    <MudCardActions>
        <MudButton OnClick="() => Controller.Client.Channels.SetChannel(_item.Id)">Select</MudButton>
    </MudCardActions>
</MudCard>

@code {
    private LgTv.Clients.Channels.Channel _item;

    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _item = await Controller.Client.Channels.GetChannel(Id);
    }
}
