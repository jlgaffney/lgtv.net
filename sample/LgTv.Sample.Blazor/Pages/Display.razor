@page "/display"
@inject ILgTvClientController Controller

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h5">Display</MudText>
    </MudCardHeader>

    <MudCardActions>
        <MudStack Row Spacing="1">
	        <MudButton OnClick="Controller.Client.Display.TurnOn3D">3D On</MudButton>

            <MudButton OnClick="Controller.Client.Display.TurnOff3D">3D Off</MudButton>
        </MudStack>
    </MudCardActions>
</MudCard>