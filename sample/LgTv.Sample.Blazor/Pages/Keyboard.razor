@page "/keyboard"
@inject IClientController Controller

<PageTitle>Keyboard</PageTitle>

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h5">Keyboard</MudText>
    </MudCardHeader>

	<MudCardContent>
		<MudTextField Label="Text" @bind-Value="_text" AutoFocus />
	</MudCardContent>
    
    <MudCardActions>
        <MudStack Row Spacing="1">
            <MudButton OnClick="() => Controller.Client.Keyboard.InsertText(_text)">Insert</MudButton>
            <MudButton OnClick="() => Controller.Client.Keyboard.DeleteCharacters()">Delete</MudButton>
            <MudButton OnClick="Controller.Client.Keyboard.SendEnterKey">Enter</MudButton>
        </MudStack>
    </MudCardActions>
</MudCard>

@code {
    private string _text;
}
